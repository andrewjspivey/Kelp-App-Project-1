<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
 
    <title>All Restaurants</title>
</head>
<body>

    <section class="hero is-primary is-medium">
        <!-- Hero head: will stick at the top -->
        <div class="hero-head">
          <nav class="navbar">
            <div class="container">
              <div class="navbar-brand">
                <a href="/" class="navbar-item">
                  <img src="https://uploads-ssl.webflow.com/5be7bc39ea60003da6a932e0/5be8c37ac9fc1ff7e3038120_kelp%20logo.png" alt="Logo">
                </a>
                <span class="navbar-burger burger" data-target="navbarMenuHeroA">
                  <span></span>
                  <span></span>
                  <span></span>
                </span>
              </div>
              <div id="navbarMenuHeroA" class="navbar-menu">
                <div class="navbar-end">
                  <a class="navbar-item is-active" href="/restaurants">
                    All Restaurants
                  </a>
                  <a class="navbar-item" href="/reviews/new">Write A Review
                  </a>
                  <a class="navbar-item" href="/restaurants/new">Add a Restaurant
                 
                  </a>

                  <!-- Nav bar for login  -->
                
                </div>
              </div>
            </div>
          </nav>
        </div>
      
        <!-- Hero content: will be in the middle -->
        <div class="hero-body">
          <div class="container has-text-centered">
            <h1 class="title">
             Kelp
            </h1>
            <h2 class="subtitle">
              Find Good Eats
            </h2>
          </div>
        </div>
      

          </nav>
        </div>
      </section>
    <main>
    <h1>All Restaurants</h1>
    <a href="/">Home</a>
    <a href="/restaurants/new">Add A New Restaurant</a>
    <a href="/reviews/new">Leave A Review</a>
    <ul>
        <% restaurants.forEach(restaurant => { %>
<li>
    <a href="/restaurants/<%= restaurant._id %>"><%= restaurant.name %> </a>
</li>
<li>
    <a href="/restaurants/<%= restaurant._id %>/newreview">Write a review</a>
</li>

      <%  }) %> 
    </ul>

    <% if(restaurants.length === 0) { %>
        <p>There are no restaruants available yet.</p>
        <% } %>
    </main>
   



</body>
</html>